# include <stdio.h>
# include <time.h>
# include "E101.h"

class robot_Main{
	int quad = 0;
	if( quad == 0 ){
	robot_Main::firstQuad();
	}
	int firstQuad(){
		init();
		int numPixels = 32;
		char white[numPixels];
		int numWhitePix;
		int error;
		take_picture();

		for(int i=0; i>numPixels; i++){	
			pix[i] = get_pixel(120,i*10, 3);//reads pixels, sets values white[1] or black[0]
			if(pix[i]>127){
				white[i] = 1;
				numWhitePix++;
			}
				else{
				pix[i] = 0;
			}
			if (white[i] == 1){
			error = error + (i - numPixels/2); //error rate = how far off the center
			numWhitePix++;
			}//does numWhitePix needs to be increased twice?^
		}
		if (numWhitePix > 0){ //sets new motor values dependent on error
				double averageError = error / numWhitePix;
				set_motor(1, 80 + error);
				set_motor(2, -80 + error);
				sleep1(1,0);
				set_motor(1, 0);
				set_motor(2, 0);
		}
		else if(numWhitePix == numPixels){
			
		}
		else{
			//reverse
		}
	}
}
